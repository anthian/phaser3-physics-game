{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": { "project": ["./tsconfig.json"] },
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"@typescript-eslint/strict-boolean-expressions": [
			2,
			{
				"allowString" : false,
				"allowNumber" : false
			}
		],
		"indent": ["error", "tab"]
	},
	"ignorePatterns": [
		".github/**/*",
		"dist/**/*",
		"node_modules/**/*",
		"public**/*",
		"test/**/*.test.ts",
		"vite/*",
		".eslintrc.json",
		".gitignore",
		"eslint-results.sarif",
		"index.html",
		"LICENSE",
		"package-lock.json",
		"package.json",
		"README.md",
		"tsconfig.json"
	]
}